<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show offset-3 mt-2 mb-2 col-6" >
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show offset-3 mt-2 mb-2 col-6" >
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
<% } %>